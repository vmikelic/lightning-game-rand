function _init()
	laser_man_obj = laser_manager:new(0.09)
	player_ship = player:new(laser_man_obj)
end

function _update60()
	-- enemies
	spawner._update()
    enemy_manager._update()
    timers._update()

	-- player
	player_ship:update()
	laser_man_obj:update()
end

function _draw()
	cls()

	-- player
	player_ship:draw()
	laser_man_obj:draw_lasers()

	-- enemies
	enemy_manager._draw()
end

